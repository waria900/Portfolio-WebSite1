@model List<TbSkill>



@section Styles{
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="~/Admin/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
    <!-- End plugin css for this page -->
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Skills Form</h4>
            <br />
            <p class="card-description">
                <a href="/Admin/Skills/Edit" class="btn btn-success btn-fw">@ResGeneral.lblNew</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th >@ResAdmin.lblImage</th>
                        <th >@ResGeneral.lblActions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var Skill in Model)
                    {
                        <tr class="odd">
                            <td class="py-1">
                                <img src="/Uploads/skills/@Skill.ImageName" alt="image">
                            </td>


                            <td class="col-md-1">
                                <a style="height:max-content"
                               asp-controller="Skills" asp-action="Edit" asp-route-Id="@Skill.Id"
                               class="btn btn-info">Edit</a>

                         

                        </tr>
                    }
            </table>
        </div>
    </div>
</div>



@* // For toast alert. *@
@await Component.InvokeAsync("NToastNotify")
